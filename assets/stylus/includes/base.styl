body
	-webkit-font-smoothing: antialiased
	// text-rendering: optimizeLegibility

#instantclick
	display: none

html, body
	height: 100%

.m-container
	display: flex
	flex-direction: column
	min-height: 100%

	> .breadcrumb
		flex-shrink: 0

	> .m-container2
		flex: 1
		display: flex

		> section[role=content]
			flex: 1

		> nav
			flex: 0 0 25%

			> ul > li.file > a
				padding-left: 32px

/*==========================================
 * Content
 *==========================================*/
section[role=content]
	> article > h1:first-child,
	> article > h2:first-child,
	> article > h3:first-child,
	> article > h4:first-child,
	> article > h5:first-child,
	> article > h6:first-child
		margin-top: 0 !important

code, kbd, pre, samp
	font-family: Inconsolata, monospace
	font-size: 1em

code
	font-size: 100%

.m-empty
	padding: .75em
	margin: 1em 1.5em

	color: #ddd
	text-align: center
	background: #f5f5f5
	border-radius: 10px

	.glyphicon
		top: 4px

/*==========================================
 * Bootstrap customizations
 *==========================================*/

.nav-pills > li > a
	border-radius: 0

.nav > li > a:hover,
.nav > li > a:focus
	background-color: initial

.nav-stacked > li + li
	margin-top: 0

.breadcrumb
	margin: 0

	> li
		white-space: pre

blockquote
	font-size: 1em

/*==========================================
 * Callout boxes
 *==========================================*/

.callout
	margin: 20px 0
	padding: 20px
	border-left: 3px solid #5bc0de
	background-color: #f4f8fa
	// border-left: 3px solid #f0ad4e
	// background-color: #fcf8f2

	h4
		margin-top: 0
		margin-bottom: 5px
		color: #5bc0de
		// color: #f0ad4e

	p:last-child
		margin-bottom: 0

	code
		background-color: #fff