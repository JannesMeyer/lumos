@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$content-bg = #fff

/*==========================================
 * THEME
 *==========================================*/

body
	background: $content-bg

/*==========================================
 * Breadcrumbs
 *==========================================*/

.m-header
	padding: 8px 50px 10px
	background-color: hsl(0, 0%, 96%)

	ol
		margin: 0
		padding: 0

	> ol
		list-style: none
		font-size: 1.1em

		> li:first-child
			margin: 0
			font-size: 1.8em
			line-height: 1.25
		> li
			margin: 10px 0 0
			> ol
				list-style-type: none
				font-size: 1.2em
				> li
					display: inline-block
					> a::after
						content: "â€¢"
						padding: 0 15px
						color: #ccc
				> li:last-child > a::after
					display: none

/*==========================================
 * File/Directory sidebar
 *==========================================*/

.m-header
	border-bottom: 5px solid transparent // color later
	a:hover
		text-decoration: none
	a:active, a:focus
		text-decoration: underline

.m-navigation
	border-left: 1px solid transparent // color later
	padding-top: 12px
	padding-bottom: 12px

	> ul > li
		> a
			border-top: 1px solid transparent
			border-bottom: 1px solid transparent
			cursor: default

		&.active
			box-shadow: -2px 0 0 -1px $content-bg

/*==========================================
 * Custom colors
 *==========================================*/

custom-color()
	.m-header
		border-bottom-color: $stripe-color
		a
			color: #a0a0a0

	.m-navigation
		background: $nav-bg
		border-left-color: $nav-border

		> ul > li
			> a
				color: $nav-link-color
				&:hover,
				&:focus
					background: lighten($nav-bg, 2)
				&:active:hover
					background: lighten($nav-bg, 4)

			&.active
				> a
					border-top-color: $nav-border
					border-bottom-color: $nav-border
				> a,
				> a:hover,
				> a:focus
					background: $content-bg
					color: $nav-link-color-active

	section[role=content] > hgroup > h1
		color: $nav-link-color-active

// None
