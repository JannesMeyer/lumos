@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$content-bg = #fff

/*==========================================
 * THEME
 *==========================================*/

a
  color: $link-color

  &:hover
    color: $hover-link-color

  &:active
    outline: 2px solid $link-color
    z-index: 10

    &:hover
      outline: 2px solid $hover-link-color

.navbar
  display: none

.m-container
  margin-bottom: 0
  width: 100%

  background: $content-bg

section[role=content]
  padding: 30px 50px

  > article
    max-width: 650px

/*==========================================
 * Breadcrumbs
 *==========================================*/

.breadcrumb

  border-bottom: 5px solid #aa90d3
  border-radius: 0

  > li:first-child
    font-size: 1.9em

/*==========================================
 * File/Directory sidebar
 *==========================================*/

$nav-bg = #ede9f5
$nav-link-color = #583589

$nav-active-bg = #fff
$nav-active-link-color = #8967bd

$nav-border = #d2c6e4

.m-navigation
  background: $nav-bg
  border-left: 1px solid $nav-border
  padding-top: 12px
  padding-bottom: 12px

.m-navigation > ul > li
  border-top: 1px solid transparent
  border-bottom: 1px solid transparent

  &.active
    border-top-color: $nav-border
    border-bottom-color: $nav-border
    position: relative
    left: -1px

    > a
      padding-left: 33px

  > a
    color: $nav-link-color

    &:hover,
    &:focus
      background: lighten($nav-bg, 2)

    &:active:hover
      outline: 0
      background: lighten($nav-bg, 4)

  &.active > a,
  &.active > a:hover,
  &.active > a:focus
    background: $nav-active-bg
    color: $nav-active-link-color

