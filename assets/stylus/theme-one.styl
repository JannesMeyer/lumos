/*==========================================
 * Content
 *==========================================*/

article
	font-family: 'Inconsolata', monospace
	line-height: 1.5
	font-size: 16px
	color: #333
	max-width: 650px

	h1, h2, h3, h4, h5, h6
		font-family: 'Avenir Next Condensed'
		font-weight: bold

	h1
		font-size: 1.7em

	h2
		font-size: 1.4em

	h3
		font-size: 1.2em
		font-style: oblique

	h4
		font-size: 1em

	ul
		list-style-type: disc
		padding-left: 30px

	a
		color: $link-color
		text-decoration: underline

		&:hover
			color: $hover-link-color

		&:active
			outline: 2px solid $link-color
			z-index: 10

			&:hover
				outline: 2px solid $hover-link-color

#instantclick-bar
	background-color: $hover-link-color