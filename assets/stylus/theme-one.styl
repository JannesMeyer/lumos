/*==========================================
 * Content
 *==========================================*/

section[role=content]
	padding: 30px 50px

	> hgroup
		margin-bottom: 22px

		> h1
			margin: 0
			margin-bottom: 2px
			font-size: 2.15em
			font-family: 'Avenir Next'
			// font-weight: bold

		> p
			display: inline-block
			font-size: 0.85em
			opacity: 0.2
			color: #aaa
			transition: opacity 0.2s ease

			> .date
				margin-right: 4px

		&:hover > p
			opacity: 1


article
	font-family: 'Inconsolata', monospace
	line-height: 1.5
	font-size: 16px
	color: #333
	max-width: 650px

	h1, h2, h3, h4, h5, h6
		font-family: 'Avenir Next', sans-serif
		// font-weight: bold

	h1
		font-size: 1.5em

	h2
		font-size: 1.3em

	h3
		font-size: 1.1em
		font-style: oblique

	h4
		font-size: 1em

	ul
		list-style-type: disc
		padding-left: 30px

	a
		color: $link-color

		&:hover
			color: $hover-link-color
			text-decoration: underline

		&:active
			outline: 2px solid $link-color
			&:hover
				outline: 2px solid $hover-link-color