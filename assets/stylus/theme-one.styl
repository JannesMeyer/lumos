@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$content-bg = #fff

/*==========================================
 * THEME
 *==========================================*/

body
	background: $content-bg

section[role=content]
	padding: 30px 50px

/*==========================================
 * Breadcrumbs
 *==========================================*/

.breadcrumb
	border-bottom: 5px solid #aa90d3
	border-radius: 0
	padding-left: 50px

	> li:first-child
		font-size: 1.9em

/*==========================================
 * File/Directory sidebar
 *==========================================*/

// None
$stripe-color = hsl(0, 0, 62.75%) // #a0a0a0
$nav-bg = hsl(0, 0, 92.16%) // #ebebeb
$nav-border = hsl(0, 0, 80.39%) // #cdcdcd
$nav-link-color = hsl(0, 0, 29.80%) // #4c4c4c
$nav-link-color-active = hsl(0, 0, 49.02%) // #7d7d7d

.m-breadcrumb
	border-bottom: 5px solid $stripe-color
	a
		color: $stripe-color
	a:hover
		text-decoration: none
	a:active
		text-decoration: underline

.m-navigation
	background: $nav-bg
	border-left: 1px solid $nav-border
	padding-top: 12px
	padding-bottom: 12px

	> ul > li
		> a
			color: $nav-link-color
			border-top: 1px solid transparent
			border-bottom: 1px solid transparent

			&:hover,
			&:focus
				background: lighten($nav-bg, 2)

			&:active:hover
				background: lighten($nav-bg, 4)

		&.active
			box-shadow: -2px 0 0 -1px $content-bg

			> a
				border-top-color: $nav-border
				border-bottom-color: $nav-border

			> a,
			> a:hover,
			> a:focus
				background: $content-bg
				color: $nav-link-color-active

/*==========================================
 * Custom colors
 *==========================================*/

custom-color()
	.m-breadcrumb
		border-bottom-color: $stripe-color
		a
			color: $stripe-color

	.m-navigation
		background: $nav-bg
		border-left-color: $nav-border

		> ul > li
			> a
				color: $nav-link-color

				&:hover,
				&:focus
					background: lighten($nav-bg, 2)

				&:active:hover
					background: lighten($nav-bg, 4)

			&.active
				> a
					border-top-color: $nav-border
					border-bottom-color: $nav-border

				> a,
				> a:hover,
				> a:focus
					background: $content-bg
					color: $nav-link-color-active

// Purple
$stripe-color = #aa90d3
$nav-bg = #ede9f5
$nav-border = #d2c6e4
$nav-link-color = #583589
$nav-link-color-active = #8967bd
.s-purple-mist
	custom-color()

// Orange
$stripe-color = #ff9a29
$nav-bg = #fdebdc
$nav-border = #facba3
$nav-link-color = #ba3f00
$nav-link-color-active = #f27200
.s-orange
	custom-color()

// Blue
$stripe-color = #60aadf
$nav-bg = #e2edf7
$nav-border = #b3d2ea
$nav-link-color = #005795
$nav-link-color-active = #1f8aca
.s-blue
	custom-color()

// Apple
$stripe-color = #7fbf60
$nav-bg = #e6f1e1
$nav-border = #bfdbb2
$nav-link-color = #146e00
$nav-link-color-active = #50a226
.s-apple
	custom-color()

/*==========================================
 * Content
 *==========================================*/

article
	font-family: 'Inconsolata', monospace
	line-height: 1.5
	font-size: 16px
	color: #333
	max-width: 650px

	h1, h2, h3, h4, h5, h6
		font-family: 'Avenir Next Condensed'
		font-weight: bold

	h1
		font-size: 1.7em

	h2
		font-size: 1.4em

	h3
		font-size: 1.2em
		font-style: oblique

	h4
		font-size: 1em

	ul
		list-style-type: disc
		padding-left: 30px

	a
		color: $link-color
		text-decoration: underline

		&:hover
			color: $hover-link-color

		&:active
			outline: 2px solid $link-color
			z-index: 10

			&:hover
				outline: 2px solid $hover-link-color

#instantclick-bar
	background-color: $hover-link-color