$nav-bg = hsl(0, 0, 92.16%) // #ebebeb
$nav-border = hsl(0, 0, 80.39%) // #cdcdcd
$nav-link-color = hsl(0, 0, 29.80%) // #4c4c4c
$nav-link-color-active = hsl(0, 0, 49.02%) // #7d7d7d
