@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$content-bg = #fff

/*==========================================
 * THEME
 *==========================================*/
body
	background: $content-bg

/*==========================================
 * Breadcrumbs
 *==========================================*/

.m-header
	padding: 8px 50px 10px
	background-color: hsl(0, 0%, 96%)

	ol
		margin: 0
		padding: 0

	a:hover,
	a:focus
		text-decoration: none

	> ol
		list-style: none
		font-size: 1.1em

		> li:first-child
			margin: 0
			font-size: 1.8em
			line-height: 1.25
		> li
			margin: 0
			margin-top: 6px
			> ol
				list-style-type: none
				> li
					display: inline-block
					&::after
						content: "â€¢"
						color: #ccc
					&:last-child::after
						display: none
					> a
						padding: 0 10px
					&:first-child > a
						padding-left: 0
					&:last-child > a
						padding-right: 0

/*==========================================
 * File/Directory sidebar
 *==========================================*/

.m-header
	border-bottom: 5px solid transparent // color later

.m-navigation
	border-left: 1px solid transparent // color later
	padding-top: 12px
	padding-bottom: 12px

	> ul > li
		> a
			border-top: 1px solid transparent
			border-bottom: 1px solid transparent
			cursor: default

		&.active
			box-shadow: -2px 0 0 -1px $content-bg

.m-search
	position: absolute
	top: 11px
	right: 15px
	width: 300px
	border: none
	outline: none
	padding: 4px
	padding-left: 5px
	color: #666

/*==========================================
 * Custom colors
 *==========================================*/

custom-color()
	.m-header
		border-bottom-color: $stripe-color
		a
			color: #a0a0a0
			transition: color 0.1s
		a:hover,
		a:focus
			color: $stripe-color

	.m-search:focus
		box-shadow: 0 0 2px 2px rgba($stripe-color, 0.75)
		background: darken(#fff, 1)

	.m-navigation
		background: $nav-bg
		border-left-color: $nav-border

		> ul > li
			> a
				color: $nav-link-color
				&:hover,
				&:focus
					background: lighten($nav-bg, 2)
				&:active:hover
					background: lighten($nav-bg, 4)

			&.active
				> a
					border-top-color: $nav-border
					border-bottom-color: $nav-border
				> a,
				> a:hover,
				> a:focus
					background: $content-bg
					color: $nav-link-color-active

	.m-page-title > h1
		color: $nav-link-color-active

// None
$stripe-color = hsl(0, 0, 62.75%) // #a0a0a0
$nav-bg = hsl(0, 0, 92.16%) // #ebebeb
$nav-border = hsl(0, 0, 80.39%) // #cdcdcd
$nav-link-color = hsl(0, 0, 29.80%) // #4c4c4c
$nav-link-color-active = hsl(0, 0, 49.02%) // #7d7d7d
