article
	font-family: sans-serif
	line-height: 1.5
	color: #333
	max-width: 46em

	h1, h2, h3, h4, h5, h6
		font-family: 'Avenir Next', sans-serif
		font-weight: bold

	h1, h2, h3
		margin-top: 1.2em
		margin-bottom: 0.8em

	h1
		font-size: 1.5em

	h2
		font-size: 1.3em

	h3
		font-size: 1.1em

	h4
		font-size: 1em

	ul
		list-style-type: disc
		padding-left: 2.15em

	a
		color: $link-color

		&:hover
			color: $hover-link-color
			text-decoration: underline

		&:active
			outline: 2px solid $link-color
			&:hover
				outline: 2px solid $hover-link-color