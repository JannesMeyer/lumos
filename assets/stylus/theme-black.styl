@require 'includes/base'
@require 'fonts/elena.styl'

/*
	Based on maxvoltar.com
 */

$link-color = #09c
$hover-link-color = #3cf

$content-bg = #eee

/*==========================================
 * THEME
 *==========================================*/

body
  background: #000
  font: 24px 'elena-web-basic-1', sans-serif
  color: #666
  text-rendering: optimizeLegibility

a
  color: $link-color

  &:hover
    color: $hover-link-color
    text-decoration: none

.m-content
  background: $content-bg


/*==========================================
 * Navbar
 *==========================================*/

.navbar
  display: none

.breadcrumb
  background: #333
  color: #999;
  padding: 1.7em 3.4em
  border-radius: 0

.breadcrumb > li + li:before
  color: inherit

/*==========================================
 * Directory listing
 *==========================================*/

.m-navigation.col-sm-3,
.m-content .col-sm-9
  width: 100%

.m-navigation
  background: $content-bg

  &.col-sm-3
    display: none
    position: absolute
    top: 0
    right: 0
    width: 300px
    z-index: 100
    min-height: 100%
    background: darken($content-bg, 3)

  a
    color: rgba(0, 0, 0, 0.5)

  a:hover,
  a:focus
    color: #111

  & > li > a:active
    background: #e2e2e2

  & > li.active > a,
  & > li.active > a:hover,
  & > li.active > a:focus
    background: $link-color
    color: #fff

/*==========================================
 * Content
 *==========================================*/

article.col-sm-9
  line-height: 1.5
  color: #666
  padding: 81px

  p
    margin-bottom: 0.85em

  a
    text-decoration: underline

  h1, h2, h3, h4, h5, h6
    font-weight: bold
    color: #333

  h1
    font-size: 1.45em
    margin-bottom: 0.4em
    margin-top: 0.8em

  h2
    font-size: 1.28em

  h3
    font-size: 1.2em
    font-style: oblique

  h4
    font-size: 1em

  ul
    list-style-type: disc
    padding-left: 30px

#instantclick-bar
  background-color: $hover-link-color