@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$content-bg = #fcfcfc

/*==========================================
 * THEME
 *==========================================*/

body
  background: url('/images/sativa.png')
  -webkit-font-smoothing: antialiased

a
  color: $link-color

  &:hover
    color: $hover-link-color

  &:active
    outline: 2px solid $link-color
    z-index: 10

    &:hover
      outline: 2px solid $hover-link-color

.m-content
  background: $content-bg
  border-radius: 8px 8px 4px 4px

/*==========================================
 * Directory listing
 *==========================================*/

$nav-bg = #444

.m-navigation
  background: $nav-bg

.m-navigation > ul > li

  & > a
    color: rgba(225, 225, 225, 0.8)

    &:hover,
    &:focus
      color: #eee
      background: #585858

    &:active
      outline: 2px solid #b2f6a5

  &.active > a,
  &.active > a:hover,
  &.active > a:focus
    background: #b2f6a5
    color: #00920c

