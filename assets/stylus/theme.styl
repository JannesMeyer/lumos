@require 'includes/base.styl'

$link-color = #00a5e6
$hover-link-color = darken(saturate($link-color, 20), 20)

$nav-hover-bg = #f5f5f5
$nav-active-bg = #b2f6a5
$nav-active-color = #00920c

$content-bg = #fcfcfc

/*==========================================
 * THEME
 *==========================================*/

body
  background: url('/images/sativa.png')
  -webkit-font-smoothing: antialiased

a
  color: $link-color

  &:hover
    color: $hover-link-color

  &:active
    outline: 2px solid $link-color

    &:hover
      outline: 2px solid $hover-link-color

.m-content
  background: $content-bg
  border-radius: 8px 8px 4px 4px

/*==========================================
 * Directory listing
 *==========================================*/

.m-navigation

  & > li > a:hover,
  & > li > a:focus
    background: $nav-hover-bg

  & > li.active > a,
  & > li.active > a:hover,
  & > li.active > a:focus
    background: $nav-active-bg
    color: $nav-active-color

  & > li.directory > a::before,
  & > li.file > a::before
    display: inline
    padding: .2em .6em .3em
    font-size: 75%
    font-weight: bold
    line-height: 1
    color: #fff
    text-align: center
    white-space: nowrap
    vertical-align: baseline
    border-radius: .25em
    margin-right: 7px

  & > li.directory > a::before
    content: "DIR"
    background-color: #5cb85c

  & > li.file > a::before
    content: "MD"
    background-color: #999

/*==========================================
 * Content
 *==========================================*/

article
  font-family: 'Inconsolata', monospace
  line-height: 1.5
  font-size: 16px
  color: #333

  h1, h2, h3, h4, h5, h6
    font-family: 'Avenir Next Condensed'
    font-weight: bold

  h1
    font-size: 1.7em

  h2
    font-size: 1.4em

  h3
    font-size: 1.2em
    font-style: oblique

  h4
    font-size: 1em

  ul
    list-style-type: disc
    padding-left: 30px

  a
    text-decoration: underline

#instantclick-bar
  background-color: $hover-link-color