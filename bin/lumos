#!/usr/bin/env node --harmony
'use strict';

var cfg = require('../config.json');
var baseUrl = 'http://notes';

// Understand command line arguments
var commands = {
	serve: function(args) {
		var traceur = require('traceur');
		var app = require('../dist/app');

		// TODO: make the port a command line argument
		var port = process.env.PORT || 9000;
		app.listen(port, function() {
			console.log('Listening on port', port);
		});
	},

	view: function(args) {
		var argv = require('minimist')(args);
		var childProcess = require('child_process');

		if (argv._.length === 0) {
			throw new Error('Not enough arguments');
		}

		var pathname;
		// convert to pathname
		if (argv['base-path']) {
			var basePath = argv['base-path'];
			var absPath = argv._[0];

			if (absPath.startsWith(basePath)) {
				var baseStripped = absPath.substring(basePath.length);
				pathname = (baseStripped.startsWith('/') ? '' : '/') + baseStripped;
			} else {
				throw new Error('The provided path does not start with <base-path>');
			}
		} else {
			pathname = '/' + argv._[0];
		}

		// Strip "(index).md" from the end
		if (pathname.endsWith(cfg.indexFile)) {
			pathname = pathname.slice(0, -cfg.indexFile.length);
		} else if (pathname.endsWith(cfg.mdSuffix)) {
			pathname = pathname.slice(0, -cfg.mdSuffix.length);
		}

		// Open URL in browser
		var url = baseUrl + pathname;
		console.log('Opening...', url);
		// TODO: make this cross-platform, but without exec()
		// https://www.npmjs.org/package/open
		childProcess.spawn('open', [url], {stdio: 'inherit'});
	},

	edit: function(args) {
		var argv = require('minimist')(args);
		if (argv._.length === 0) {
			throw new Error('Not enough arguments');
		}
		var filePath = argv._[0];
		if (argv['decode-url']) {
			// escape() will not encode: @*/+
			// (encodes Unicode characters to Unicode escape sequences, too)
			// encodeURI() will not encode: ~!@#$&*()=:/,;?+'
			// encodeURIComponent() will not encode: ~!*()'
			filePath = decodeURI(filePath);
		}
		console.log(filePath);

		require('traceur');
		require('../dist/open').openExistingFile(filePath);
	},

	diary: function(days) {
		require('traceur');
		require('../dist/open').openDiary(days);
	}
};

function showBaseHelp() {
	console.log('usage: lumos <command> [<args>]\n');
	console.log('Available commands:');
	Object.keys(commands).forEach(function(command) {
		console.log('   ', command)
	});
}

// Parse command line arguments
function parseArgs(args) {
	if (args.length < 1 || !commands.hasOwnProperty(args[0])) {
		showBaseHelp();
		return;
	}
	// Execute function
	var command = args.shift();
	commands[command](args);
}

parseArgs(process.argv.slice(2));