/*==========================================
 * Table of contents
 *==========================================*/

.m-toc
	display: inline-block
	border: 1px solid #ccc
	padding: 12px
	min-width: 180px
	background-color: #f5f5f5

	&.toc-hidden > .toc-content
		display: none

	> .toc-heading
		font-weight: bold
		> .toggle
			font-weight: normal

	> .toc-content
		margin-top: 5px

	ol
		margin: 0
		padding: 0
		counter-reset: item
		ol
			padding-left: 2em
		> li
			display: block
			counter-increment: item
			> a:before
				content: counters(item, '.')
				padding-right: 0.5em

:root:fullscreen .m-toc
	display: none