{
	"src": {
		"serverJS":   ["./src/**/*.js", "./src/**/*.jsx"],
		"clientJS":   "./dist/client/index.js",
		"components": "./components-jsx/**/*.jsx",
		"styles":     "./assets/stylus/*.styl"
	},
	"dest": {
		"serverJS":   "./dist/",
		"clientJS":   "./public/javascripts/",
		"components": "./components-js/",
		"styles":     "./public/stylesheets/"
	},
	"watch": {
		"styles": "./assets/stylus/**",
		"public": "./public/**"
	},
	"errorTemplate": {
		"title": "<%= error.plugin %>",
		"message": "<%= error.name %>\n<%= error.message %>"
	}
}