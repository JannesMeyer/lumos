{
	"src": {
		"javascripts": "./src/**/*.+(js|jsx)",
		"styles": "./stylus/*.styl"
	},
	"dest": {
		"javascripts": "./dist/",
		"styles": "./public/stylesheets/"
	},
	"webpack": {
		"entry": "./src/components/page.jsx",
		"output": {
			"path": "./public/javascripts/",
		    "filename": "[name].bundle.js"
		}
	},
	"watch": {
		"styles": "./assets/stylus/**",
		"public": "./public/**"
	},
	"errorTemplate": {
		"title": "<%= error.plugin %>",
		"message": "<%= error.name %>\n<%= error.message %>"
	}
}